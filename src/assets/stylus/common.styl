// 左浮动
.fl
  float left

// 右浮动
.fr
  float right

// 居中
.text_center
  text-align center
.text_left
  text-align left
.text_right
  text-align right

// 文本超过显示省略号
.text_overflow
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

// clearfix
.clearfix:before, .clearfix:after
  content " "
  display table

.clearfix:after
  clear both

.clearfix
  *zoom 1

.common_contain
  width 1200px
  margin 0 auto
  min-height 800px
